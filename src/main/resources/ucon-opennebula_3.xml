<?xml version="1.0" encoding="UTF-8"?>
<ucon:Config xmlns:ucon="http://security.iit.cnr.it/retrail/ucon">
    <ucon:Property name="watchdogPeriod">0</ucon:Property>
    <ucon:Property name="maxMissedHeartbeats">3600</ucon:Property>
    <ucon:PIPChain>
        <ucon:PIP class="it.cnr.iit.retrail.opennebula.PIPSemaphore">
            <ucon:Property name="uuid">semaphore</ucon:Property>
        </ucon:PIP>
    </ucon:PIPChain>
    <ucon:Behaviour>
        <ucon:States>
            <ucon:State name="INIT" type="BEGIN"/>
            <ucon:State name="TRY" type="PASSIVE"/>
            <ucon:State name="ONGOING" type="ONGOING"/>
            <ucon:State name="REVOKED" type="PASSIVE"/>
            <ucon:State name="REJECTED" type="END"/>
            <ucon:State name="DELETED" type="END"/>
        </ucon:States>
        <ucon:Actions>
            <ucon:Action name="tryAccess" class="PolicyDrivenAction" source="INIT" target="TRY" failTarget="REJECTED">

                <Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="pre-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable" Version="1.0">
                    <Description>Default PRE policy</Description>
                    <Target></Target>
                    <Rule Effect="Permit" RuleId="test:rule">
                        <Target>
                            <AnyOf>
                                <AllOf>
                                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:boolean-equal">
                                        <AttributeDesignator AttributeId="Semaphore" 
                                             Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject" 
                                             DataType="http://www.w3.org/2001/XMLSchema#boolean" MustBePresent="true" Issuer="http://localhost:8080/federation-id-prov/saml">
                                        </AttributeDesignator>
                                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#boolean">true</AttributeValue>
                                    </Match>
                                </AllOf>
                            </AnyOf>
                        </Target>
                    </Rule>
                    <Rule Effect="Deny" RuleId="test:rule2"/>
                    <ObligationExpressions> 
                        <ObligationExpression ObligationId="permitUsage" FulfillOn="Permit"/>
                        <ObligationExpression ObligationId="denyUsage" FulfillOn="Deny"/> 
                    </ObligationExpressions>
                </Policy>
 
            </ucon:Action>
            <ucon:Action name="startAccess" class="PolicyDrivenAction" source="TRY" target="ONGOING" failTarget="TRY">

                <Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="trystart-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable" Version="1.0">
                    <Description>Default TRYSTART policy</Description>
                    <Target></Target>
                    <Rule Effect="Permit" RuleId="test:rule">
                        <Target>
                            <AnyOf>
                                <AllOf>
                                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:boolean-equal">
                                        <AttributeDesignator AttributeId="Semaphore" 
                                             Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject" 
                                             DataType="http://www.w3.org/2001/XMLSchema#boolean" MustBePresent="true" Issuer="http://localhost:8080/federation-id-prov/saml">
                                        </AttributeDesignator>
                                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#boolean">true</AttributeValue>
                                    </Match>
                                </AllOf>
                            </AnyOf>
                        </Target>
                    </Rule>
                    <Rule Effect="Deny" RuleId="test:rule2"/>
                </Policy>

            </ucon:Action>
            <ucon:Action name="endAccess" class="PolicyDrivenAction" source="TRY" target="DELETED" failTarget="TRY">
                <Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="TRYEND"
                        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable" 
                        Version="1.0">
                    <Description>Default TRYEND policy</Description>
                    <Target/>
                    <Rule Effect="Permit" RuleId="TRYENDrule">
                        <Target/>
                    </Rule>
                </Policy>
            </ucon:Action>
            <ucon:Action name="ongoingAccess" class="OngoingAccess" source="ONGOING" target="ONGOING" failTarget="REVOKED">

                <Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="on-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable" Version="1.0">
                    <Description>Default ON policy</Description>
                    <Target></Target>
                    <Rule Effect="Permit" RuleId="test:rule">
                        <Target>
                            <AnyOf>
                                <AllOf>
                                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:boolean-equal">
                                        <AttributeDesignator AttributeId="Semaphore" 
                                             Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject" 
                                             DataType="http://www.w3.org/2001/XMLSchema#boolean" MustBePresent="true" Issuer="http://localhost:8080/federation-id-prov/saml">
                                        </AttributeDesignator>
                                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#boolean">true</AttributeValue>
                                    </Match>
                                </AllOf>
                            </AnyOf>
                        </Target>
                    </Rule>
                    <Rule Effect="Deny" RuleId="test:rule2"/>
                </Policy>

            </ucon:Action>
            <ucon:Action name="endAccess" class="PolicyDrivenAction" source="ONGOING" target="DELETED" failTarget="ONGOING">
                <Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="POST"
                        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable" 
                        Version="1.0">
                    <Description>Default POST policy</Description>
                    <Target/>
                    <Rule Effect="Permit" RuleId="POSTrule">
                        <Target/>
                    </Rule>
                </Policy>
            </ucon:Action>
            <ucon:Action name="endAccess" class="UconAction" source="REVOKED" target="DELETED"/>
        </ucon:Actions>
    </ucon:Behaviour>
</ucon:Config>
